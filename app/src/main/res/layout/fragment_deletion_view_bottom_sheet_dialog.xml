<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/transparent"
        app:cardCornerRadius="@dimen/_20dp"
        app:cardElevation="@dimen/_10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15dp"
            android:background="@color/color_white"
            app:cardCornerRadius="@dimen/_10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/logout_button_color"
                android:paddingTop="@dimen/_20dp"
                android:paddingBottom="@dimen/_20dp">

                <ImageView
                    android:id="@+id/imageviewCancelDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:src="@drawable/ic_baseline_clear_24"
                    android:textColor="@color/color_black" />

                <TextView
                    android:id="@+id/textMainTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15dp"
                    android:fontFamily="@font/manrope_bold"
                    android:text="@string/options"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_18sp" />

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textMainTitle"
                    android:layout_marginTop="@dimen/_20dp"
                    android:background="@color/color_light_grey" />

                <TextView
                    android:id="@+id/deletePlaylistTextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line"
                    android:layout_marginStart="@dimen/_15dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:fontFamily="@font/manrope_bold"
                    android:text="@string/delete_playlist"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_14sp" />


            </RelativeLayout>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:indeterminateTint="@color/logout_button_color"
                android:progressTint="@color/logout_button_color"
                android:visibility="gone"
                tools:ignore="UnusedAttribute" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>