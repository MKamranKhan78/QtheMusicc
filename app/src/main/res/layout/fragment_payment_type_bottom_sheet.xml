<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_dark_gray">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_15dp"
            android:background="@color/transparent_color"
            app:cardCornerRadius="@dimen/_10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_black"
                android:paddingTop="@dimen/_20dp">

                <ImageView
                    android:id="@+id/imageviewCancelDialogBottomSheet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:src="@drawable/ic_baseline_clear_24"
                    android:textColor="@color/color_black" />

                <TextView
                    android:id="@+id/textMainTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15dp"
                    android:fontFamily="@font/manrope_bold"
                    android:text="@string/options"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_18sp" />

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textMainTitle"
                    android:layout_marginTop="@dimen/_20dp"
                    android:background="@color/color_light_grey" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_all_type_id"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_3dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:layout_below="@id/line"
                    android:layout_marginBottom="@dimen/_3dp"
                    android:background="@color/transparent_color"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/allTypePaymentTypeTextviewID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_marginEnd="@dimen/_5dp"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:fontFamily="@font/manrope_bold"
                        android:text="@string/all_payment_type"
                        android:textColor="@color/color_white_text_profile"
                        android:textSize="@dimen/_14sp" />

                    <ImageView
                        android:id="@+id/allTypePaymentTypeTick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:src="@drawable/ic_icon_feather_check"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_in_app_purchase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_all_type_id"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:layout_marginBottom="@dimen/_3dp"
                    android:background="@color/transparent_color"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/inAppPurchasedTextviewID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:layout_marginEnd="@dimen/_5dp"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:fontFamily="@font/manrope_bold"
                        android:text="@string/in_app_purchases"
                        android:textColor="@color/color_white_text_profile"
                        android:textSize="@dimen/_14sp" />

                    <ImageView
                        android:id="@+id/imageviewTick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:src="@drawable/ic_icon_feather_check"
                        android:visibility="gone" />

                </RelativeLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>
