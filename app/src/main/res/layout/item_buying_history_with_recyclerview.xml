<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="obj"
            type="com.techswivel.qthemusic.models.Song" />

        <variable
            name="click"
            type="com.techswivel.qthemusic.customData.interfaces.AdapterOnClick" />


    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5dp"
        android:background="@color/color_dark_gray">

        <RelativeLayout
            android:id="@+id/rl_trending_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20dp"
            tools:ignore="UselessParent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_cover_image"
                android:layout_width="@dimen/_45dp"
                android:layout_height="@dimen/_45dp"
                android:background="@android:color/transparent"
                app:cardCornerRadius="@dimen/_6dp"
                app:cardElevation="@dimen/_6dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:setImageViewImage="@{obj.coverImageUrl}"
                    tools:src="@drawable/no_image_palce_holder" />

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_toStartOf="@id/totalDollars"
                android:layout_toEndOf="@id/cv_cover_image"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/manrope_regular"
                    android:maxLines="1"
                    android:minLines="1"
                    android:text="Changes"
                    android:textColor="@color/color_white_text_profile"
                    android:textSize="@dimen/_14sp" />
                <!--
                                android:text="@{obj.songTitle}"
                -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_regular"
                    android:text="5 songs"
                    android:textColor="@color/color_light_grey"
                    android:textSize="@dimen/_14sp" />
                <!--                setSongDuration="@{obj.songDuration}"-->


            </LinearLayout>

            <LinearLayout
                android:id="@+id/totalDollars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_13dp"
                    android:layout_height="@dimen/_13dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_5dp"
                    android:src="@drawable/ic_arrow_up_red_price" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_regular"
                    android:text="$435.4"
                    android:textColor="@color/color_white_text_profile"
                    android:textSize="@dimen/_14sp" />


            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/linegray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_0.5dp"
            android:layout_below="@id/rl_trending_song"
            android:background="@color/light_gray_color" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/subItemRecyclerview"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/linegray"
            tools:listitem="@layout/sub_item_buying_history" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_0.5dp"
            android:layout_below="@id/subItemRecyclerview"
            android:layout_marginTop="@dimen/_10dp"
            android:background="@color/light_gray_color" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line2"
            android:layout_margin="@dimen/_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_10dp"
                android:fontFamily="@font/manrope_medium"
                android:text="12 Dec 2021-5:00PM"
                android:textColor="@color/color_white_text_profile"
                android:textSize="@dimen/_12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:fontFamily="@font/manrope_medium"
                android:text="Paypal"
                android:textColor="@color/color_white_text_profile"
                android:textSize="@dimen/_12sp" />

        </RelativeLayout>

    </RelativeLayout>

</layout>