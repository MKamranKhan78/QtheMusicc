<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/color_black"
        app:cardCornerRadius="@dimen/_16dp"
        tools:context=".ui.dialogFragments.whyWeAreAskingDialogFragment.WhyWeAreAskingDialogFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/ic_close"
                android:layout_marginTop="@dimen/_16dp"
                android:layout_marginEnd="@dimen/_16dp"
                />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_50dp"
                android:layout_marginEnd="@dimen/_16dp"
                android:fontFamily="@font/manrope_bold"
                android:gravity="center"
                android:text="@string/why_we_asking_tag"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_18sp" />

            <TextView
                android:id="@+id/btn_next_license_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_marginEnd="@dimen/_16dp"
                android:layout_marginBottom="@dimen/_16dp"
                android:fontFamily="@font/manrope_regular"
                android:gravity="center"
                android:paddingTop="@dimen/_16dp"
                android:paddingBottom="@dimen/_16dp"
                android:text="@string/why_we_asking_msg"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>