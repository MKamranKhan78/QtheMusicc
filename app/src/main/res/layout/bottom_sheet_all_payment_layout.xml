<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15dp"
            android:background="@color/color_white"
            app:cardCornerRadius="@dimen/_10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_black"
                android:paddingTop="@dimen/_20dp"
                android:paddingBottom="@dimen/_20dp">

                <ImageView
                    android:id="@+id/imageviewCancelDialogBottomSheet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:src="@drawable/ic_baseline_clear_24"
                    android:textColor="@color/color_black" />

                <TextView
                    android:id="@+id/textMainTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15dp"
                    android:fontFamily="@font/manrope_bold"
                    android:text="@string/options"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_18sp" />

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textMainTitle"
                    android:layout_marginTop="@dimen/_20dp"
                    android:background="@color/color_light_grey" />


                <TextView
                    android:id="@+id/allPaymentTypeTextviewBottomSheet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line"
                    android:layout_marginStart="@dimen/_15dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:drawableRight="@drawable/ic_icon_feather_check"
                    android:fontFamily="@font/manrope_bold"
                    android:text="@string/all_payment_type"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_14sp" />

                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/allPaymentTypeTextviewBottomSheet"
                    android:layout_marginTop="@dimen/_20dp"
                    android:background="@color/color_light_grey" />

                <TextView
                    android:id="@+id/googlePayTextviewBottomSheet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line2"
                    android:layout_marginStart="@dimen/_15dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:fontFamily="@font/manrope_bold"
                    android:text="@string/google_pay"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_14sp" />

                <View
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/googlePayTextviewBottomSheet"
                    android:layout_marginTop="@dimen/_20dp"
                    android:background="@color/color_light_grey" />


                <TextView
                    android:id="@+id/applePayTextviewBottomSheet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line3"
                    android:layout_marginStart="@dimen/_15dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:fontFamily="@font/manrope_bold"
                    android:text="@string/apple_pay"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_14sp" />

                <View
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/applePayTextviewBottomSheet"
                    android:layout_marginTop="@dimen/_20dp"
                    android:background="@color/color_light_grey" />

                <TextView
                    android:id="@+id/paypalTextviewBottomSheet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line4"
                    android:layout_marginStart="@dimen/_15dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:fontFamily="@font/manrope_bold"
                    android:text="@string/paypal"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_14sp" />

            </RelativeLayout>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:indeterminateTint="@color/logout_button_color"
                android:progressTint="@color/logout_button_color"
                android:visibility="gone"
                tools:ignore="UnusedAttribute" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>
